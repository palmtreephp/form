<?php declare(strict_types=1);

use Palmtree\PhpCsFixerConfig\Config;

$config = new Config();

$config
    ->setRules(array_merge($config->getRules(), ['no_superfluous_phpdoc_tags' => ['allow_mixed' => true]]))
