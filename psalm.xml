                <referencedProperty name="Palmtree\Form\Type\AbstractType::$type"/>
                <referencedProperty name="Palmtree\Form\Type\AbstractType::$name"/>
                <referencedProperty name="Palmtree\Form\Type\AbstractType::$form"/>
                <referencedProperty name="Palmtree\Form\Type\RepeatedType::$repeatableType"/>
                <referencedProperty name="Palmtree\Form\Type\OptionType::$value"/>
                <referencedProperty name="Palmtree\Form\Type\CollectionType::$entryType"/>
                <referencedProperty name="Palmtree\Form\Constraint\Match::$matchField"/>
            </errorLevel>
        </PropertyNotSetInConstructor>
    </issueHandlers>
</psalm>
